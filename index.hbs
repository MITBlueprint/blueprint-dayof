<!DOCTYPE html>
<html>
<head lang="en">

  {{> shared_header context=headerContext}}

  <!-- events data -->
  <script src="../assets/js/events.js"></script>

  <!-- current events logic -->
  <script src="../assets/js/current_events.js"></script>

  {{> semantics_ui context=semanticsContext}}

  {{> meta_fb}}

  {{> meta_tw}}

  {{> ga context=gaContext }}

  {{> meta_viewport}}

  <script src="../assets/js/base.js"></script>
</head>

<body>

{{> pageDimmer }}


{{> nav context=navContext }}


{{> banner context=bannerContext }}

<div id="home" class="main">
  <div class="ui stackable page grid">
    <div class="sixteen wide column" id="current-events-cont"
         style="display: none !important;">
      <table class="ui table segment current-events-table">
        <tbody id="current-events-tbody">
          <tr>
            <td class="active current-events" colspan="4">
              <h1>Current events</h1>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div id="links-column" class="eight wide column">
      <div class="ui segment top attached inverted">
        <h1>Important Info</h1>
      </div>
      <div class="ui segment bottom attached">
        <h3>
          Wifi:
          <div class="ui label" style="text-transform: none">{{wifi}}</div>
        </h3>
        <h3> Event Links </h3>
        <div class="ui link list">
          {{#each importantLinks}}
          <a class="item" href="{{this.href}}">
            <i class="{{this.icon}} icon"></i>
            <div class="content">
              {{this.content}}
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>

    <div id="contacts-column" class="eight wide column">
      <div class="ui segment top attached inverted">
        <h1>Contact</h1>
      </div>
      <div class="ui segment bottom attached">
      <div class="ui link list">
        {{#each contacts}}
        <a class="item" href="{{this.href}}">
          <i class="{{this.iconClass}} icon"></i>
          <div class="content">
            {{this.content}}
          </div>
        </a>
        {{/each}}
      </div>

      <h3> Social Media </h3>
      {{#each socialMedias}}
      <a class="ui {{this.class}} button" href="{{this.href}}">
        <i class="{{this.iconClass}} icon"></i>
        {{this.displayText}}
      </a>
      {{/each}}

        <h3> Emergency </h3>
        <div class="horizontal list">
          <a class="ui basic labeled icon button" href="tel:617-253-1212">
            MIT Police - (617) 253-1212
            <i class="medkit icon"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

</body>
</html>
